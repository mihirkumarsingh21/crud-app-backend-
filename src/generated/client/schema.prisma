generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String
  email    String @unique
  password String
}

model Todo {
  id          Int     @id @default(autoincrement())
  title       String
  description String
  done        Boolean
  user_id     Int
}
