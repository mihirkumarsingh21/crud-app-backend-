

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id Int @id @default(autoincrement())
  username String
  email String @unique
  password String
  todos Todo[]
}


model Todo {
  id Int @id @default(autoincrement())
  title String
  description String
  done Boolean @default(false)
  user_id Int
  user User @relation(fields: [user_id], references: [id])
}
